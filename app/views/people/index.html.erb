
<div id="app">
  <div v-for="person in people">
    <div id = 'success' ></div>
    <p>My name: <b>{{ person.name }}</b></p>
    <p>My Bio:</p>
    <button v-on:click="deletePerson(person)">Delete This Person</button>
    <button v-if="person.visible" v-on:click="toggleBio(person)"> Hide Bio</button>
    <button v-if="!person.visible" v-on:click="toggleBio(person)"> Show Bio</button>
    <button v-on:click="toggleEdit(person)">Edit This Person</button>
      <div v-if="person.edit">
        <input v-model="person.name" style="height:50px;width:300px;font-size:14pt;"><br>
        <input v-model="person.bio" style="height:75px;width:100%;font-size:14pt;"><br>
        <button v-on:click="updatePerson(person)">Save Your Changes</button>
        <br>
      </div>
    <h3 v-if="person.visible">{{person.bio}}</h3>
    <hr>
  </div>
  <div v-for="error in errors"> <h4 style="color:red">{{ error }}</h4></div>
  <h4 style="color:green">{{ success }}</h4>
  <h3>Name:  <input v-model='name' style="height:50px;width:300px;font-size:14pt;"></h3>
  <br>
  <h3>Bio:  <input v-model='bio' style="height:75px;width:100%;font-size:14pt;"></h3>
  <button v-on:click="addPerson()">Add a new person!</button>
</div>
